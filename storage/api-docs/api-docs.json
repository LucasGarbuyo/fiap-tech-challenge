                        },
                        "description": "ID do cliente a ser deletado."
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Cliente deletado com sucesso."
                    },
                    "404": {
                        "description": "Cliente não encontrado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "object",
                                            "properties": {
                                                "message": {
                                                    "type": "string",
                                                    "description": "Descrição do erro.",
