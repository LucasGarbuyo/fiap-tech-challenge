{
    "openapi": "3.0.0",
    "info": {
        "title": "TechChallenge - API Documentation"
    },
    "paths": {
        "/api/product/index": {
            "get": {
                "tags": [
                    "Produtos"
                ],
                "summary": "Buscar produtos",
                "description": "Este endpoint é usado para buscar todos os produtos cadastrados no sistema.",
                "responses": {
                    "200": {
                        "description": "Listagem de produtos encontrada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "description": "ID único do produto."
                                            },
                                            "name": {
                                                "type": "string",
                                                "description": "Nome do produto."
                                            },
                                            "price": {
                                                "type": "number",
                                                "format": "float",
                                                "description": "Preço do produto."
                                            },
                                            "description": {
                                                "type": "string",
                                                "description": "Descrição do produto."
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Nenhum produto encontrado."
                    }
                }
            }
        },
        "/api/product/show/{id}": {
            "get": {
                "tags": [
                    "Produtos"
                ],
                "summary": "Buscar produto por ID",
                "description": "Este endpoint é usado para buscar um produto específico pelo seu ID.",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "description": "ID único do produto."
                        },
                        "description": "ID do produto a ser buscado."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Produto encontrado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "description": "ID único do produto."
                                        },
                                        "name": {
                                            "type": "string",
                                            "description": "Nome do produto."
                                        },
                                        "price": {
                                            "type": "number",
                                            "format": "float",
                                            "description": "Preço do produto."
                                        },
                                        "description": {
                                            "type": "string",
                                            "description": "Descrição do produto."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Produto não encontrado."
                    }
                }
            }
        },
        "/api/product/store": {
            "post": {
                "tags": [
                    "Produtos"
                ],
                "summary": "Criar novo produto",
                "description": "Este endpoint é usado para criar um novo produto.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "description": "Nome do produto.",
                                        "maxLength": 255
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "Descrição do produto."
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float",
                                        "description": "Preço do produto."
                                    }
                                },
                                "required": [
                                    "name",
                                    "price"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Produto criado com sucesso."
                    },
                    "404": {
                        "description": "Nome do produto não pode ter mais que 255 caracteres."
                    }
                }
            }
        },
        "/api/product/update/{id}": {
            "put": {
                "tags": [
                    "Produtos"
                ],
                "summary": "Atualizar produto por ID",
                "description": "Este endpoint é usado para atualizar um produto existente pelo seu ID.",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "description": "ID único do produto."
                        },
                        "description": "ID do produto a ser atualizado."
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "description": "Nome do produto.",
                                        "maxLength": 255
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "Descrição do produto."
                                    },
                                    "price": {
                                        "type": "number",
                                        "format": "float",
                                        "description": "Preço do produto."
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Produto atualizado com sucesso."
                    },
                    "404": {
                        "description": "Produto não encontrado."
                    }
                }
            }
        },
        "/api/product/delete/{id}": {
            "delete": {
                "tags": [
                    "Produtos"
                ],
                "summary": "Deletar produto por ID",
                "description": "Este endpoint é usado para deletar um produto existente pelo seu ID. O produto deletado preencherá o campo com datetime o campo `deleted_at`.",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "description": "ID único do produto."
                        },
                        "description": "ID do produto a ser deletado."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Produto deletado com sucesso."
                    },
                    "404": {
                        "description": "Produto não encontrado."
                    }
                }
            }
        },
        "/api/customer": {
            "get": {
                "tags": [
                    "Clientes"
                ],
                "summary": "Buscar clientes",
                "description": "Este endpoint é usado para buscar todos os clientes cadastrados no sistema.",
                "responses": {
                    "200": {
                        "description": "Listagem de clientes encontrada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string",
                                                "description": "ID único do cliente."
                                            },
                                            "name": {
                                                "type": "string",
                                                "description": "Nome do cliente."
                                            },
                                            "cpf": {
                                                "type": "string",
                                                "description": "CPF do cliente."
                                            },
                                            "email": {
                                                "type": "string",
                                                "description": "Email do cliente."
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time",
                                                "description": "Data e hora de criação do cliente."
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "date-time",
                                                "description": "Data e hora da última atualização do cliente."
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Clientes"
                ],
                "summary": "Criar um novo cliente",
                "description": "Este endpoint é usado para criar um novo cliente.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "description": "Nome do cliente.",
                                        "example": "João"
                                    },
                                    "cpf": {
                                        "type": "string",
                                        "description": "CPF do cliente.",
                                        "example": "12345678901"
                                    },
                                    "email": {
                                        "type": "string",
                                        "description": "Email do cliente.",
                                        "example": "joao@example.com"
                                    }
                                },
                                "required": [
                                    "name",
                                    "cpf",
                                    "email"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Cliente criado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "description": "ID do cliente criado."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Parametros inválidos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "object",
                                            "properties": {
                                                "message": {
                                                    "type": "string",
                                                    "description": "Descrição do erro",
                                                    "example": "Já existe um cliente cadastrado com esse CPF"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Erro ao criar cliente"
                    }
                }
            }
        },
        "/api/customer/cpf/{cpf}": {
            "get": {
