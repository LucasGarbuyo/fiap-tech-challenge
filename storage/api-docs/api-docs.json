                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time",
                                                "description": "Data e hora de criação do cliente."
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "date-time",
                                                "description": "Data e hora da última atualização do cliente."
